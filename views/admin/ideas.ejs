<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | AI Idea Expander
    </title>
    <link rel="icon" type="image/png" href="/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="d-flex flex-column min-vh-100 bg-light">
    <%- include('../partials/navbar') %>

        <main class="flex-grow-1 py-5">
            <div class="container">
                <%- include('../partials/flash-messages') %>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h1 class="h3 fw-bold mb-0">Manage Ideas</h1>
                            <p class="text-muted">Review and manage all user ideas</p>
                        </div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item active">Ideas</li>
                            </ol>
                        </nav>
                    </div>

                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="px-4 py-3">Idea</th>
                                            <th class="px-4 py-3">Author</th>
                                            <th class="px-4 py-3">Status</th>
                                            <th class="px-4 py-3">Created</th>
                                            <th class="px-4 py-3 text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% ideas.forEach(idea=> { %>
                                            <tr>
                                                <td class="px-4 py-3">
                                                    <div class="d-flex flex-column">
                                                        <span class="fw-semibold text-truncate"
                                                            style="max-width: 300px;">
                                                            <%= idea.title %>
                                                        </span>
                                                        <small class="text-muted text-truncate"
                                                            style="max-width: 300px;">
                                                            <%= idea.raw_idea ? idea.raw_idea.substring(0, 50) + '...'
                                                                : 'No description' %>
                                                        </small>
                                                    </div>
                                                </td>
                                                <td class="px-4 py-3">
                                                    <div class="d-flex align-items-center">
                                                        <div
                                                            class="avatar-circle-sm bg-secondary bg-opacity-10 text-secondary me-2">
                                                            <%= idea.user_name.charAt(0).toUpperCase() %>
                                                        </div>
                                                        <div>
                                                            <div class="small fw-semibold">
                                                                <%= idea.user_name %>
                                                            </div>
                                                            <div class="small text-muted" style="font-size: 0.75rem;">
                                                                <%= idea.user_email %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="px-4 py-3">
                                                    <% if (idea.status==='expanded' ) { %>
                                                        <span
                                                            class="badge bg-success bg-opacity-10 text-success">Expanded</span>
                                                        <% } else if (idea.status==='processing' ) { %>
                                                            <span
                                                                class="badge bg-info bg-opacity-10 text-info">Processing</span>
                                                            <% } else if (idea.status==='failed' ) { %>
                                                                <span
                                                                    class="badge bg-danger bg-opacity-10 text-danger">Failed</span>
                                                                <% } else { %>
                                                                    <span
                                                                        class="badge bg-secondary bg-opacity-10 text-secondary">Draft</span>
                                                                    <% } %>
                                                </td>
                                                <td class="px-4 py-3 text-muted small">
                                                    <%= new Date(idea.created_at).toLocaleDateString() %>
                                                </td>
                                                <td class="px-4 py-3 text-end">
                                                    <div class="btn-group">
                                                        <a href="/ideas/<%= idea.id %>" target="_blank"
                                                            class="btn btn-sm btn-outline-secondary" title="View Idea">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteModal<%= idea.id %>"
                                                            title="Delete Idea">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>

                                                    <!-- Delete Modal -->
                                                    <div class="modal fade" id="deleteModal<%= idea.id %>" tabindex="-1"
                                                        aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header border-0">
                                                                    <h5 class="modal-title">Delete Idea</h5>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal"
                                                                        aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body text-start">
                                                                    <p>Are you sure you want to delete the idea
                                                                        <strong>"<%= idea.title %>"</strong>?</p>
                                                                    <p class="text-muted small">This action cannot be
                                                                        undone and will remove all associated data.</p>
                                                                </div>
                                                                <div class="modal-footer border-0">
                                                                    <button type="button" class="btn btn-light"
                                                                        data-bs-dismiss="modal">Cancel</button>
                                                                    <form action="/admin/ideas/<%= idea.id %>/delete"
                                                                        method="POST">
                                                                        <input type="hidden" name="_csrf"
                                                                            value="<%= csrfToken %>">
                                                                        <button type="submit"
                                                                            class="btn btn-danger">Delete Idea</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Pagination -->
                        <% if (totalPages> 1) { %>
                            <div class="card-footer bg-white py-3">
                                <nav>
                                    <ul class="pagination justify-content-center mb-0">
                                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                            <a class="page-link"
                                                href="/admin/ideas?page=<%= currentPage - 1 %>">Previous</a>
                                        </li>
                                        <% for(let i=1; i <=totalPages; i++) { %>
                                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                <a class="page-link" href="/admin/ideas?page=<%= i %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <li
                                                    class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="/admin/ideas?page=<%= currentPage + 1 %>">Next</a>
                                                </li>
                                    </ul>
                                </nav>
                            </div>
                            <% } %>
                    </div>
            </div>
        </main>

        <%- include('../partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>